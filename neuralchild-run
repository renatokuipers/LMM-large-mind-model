#!/usr/bin/env python3
"""
NeuralChild launch script.

This script provides a convenient way to start the NeuralChild system
from the command line without having to install the package.
"""

import os
import sys
import platform

# Add the project directory to the Python path
project_dir = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_dir)

# Import and run the main function
from NeuralChild.main import main

if __name__ == "__main__":
    # Make the script executable on Windows too
    if platform.system() == "Windows":
        print("ðŸ§  NeuralChild: Psychological Mind Simulation")
        print("=" * 50)
        print("Note: On Windows, it's recommended to run using 'python neuralchild-run' instead.")
    
    # Run the main function
    main()